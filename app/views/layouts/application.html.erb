<!DOCTYPE html>
<html>
  <head>

    <script src="https://kit.fontawesome.com/951dfa5ed1.js" crossorigin="anonymous"></script>

    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body class="header">
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-left">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
            </a>
        </nav>
        <nav>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li class="">
                <%= link_to user_path(current_user), class:"btn btn-link" do %>
                <span class="fas fa-home"> Home</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to users_path, class:"btn btn-link" do %>
                <span class="fas fa-users"> Users</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to books_path, class:"btn btn-link" do %>
                <span class="fas fa-book-open"> Books</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to destroy_user_session_path, method: :delete, class:"btn btn-link" do %>
                <span class="fas fa-sign-out-alt"> Logout</span>
                <% end %>
              </li>
            <% else %>
              <li class="">
                <%= link_to root_path, class:"btn btn-link" do %>
                <span class="fas fa-home"> Home</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to home_about_path, class:"btn btn-link" do %>
                <span class="fas fa-link"> About</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to new_user_registration_path, class:"btn btn-link" do %>
                <span class="fas fa-user-plus"> sign up</span>
                <% end %>
              </li>
              <li class="">
                <%= link_to new_user_session_path, class:"btn btn-link" do %>
                <span class="fas fa-sign-in-alt"> login</span>
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>




    <div class="body">

      <% if user_signed_in? %>

      <%= form_tag(search_path, method: :get) do %>
      
      <%= text_field_tag (:word) %>
      
      <%= select_tag 'range' ,options_for_select([['---選択してください---',''], ['User','1'], ['Book','2']]) %>

      <%= select_tag 'search', options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"], ["後方一致","backward_match"], ["部分一致","partial_match"]]) %>
      
      <%= submit_tag "検索" %>

      <% end %>
      <% end %>

      <p class="notice"><%= notice %></p>

      <%= yield %>


        <footer>
          <p class="text-center"> CopyRight Infratop.inc</p>
        </footer>
      </div>
    </div>
  </body>
</html>